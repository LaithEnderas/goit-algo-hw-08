import heapq

def min_merge_cost(lengths):
    # якщо менше двох кабелів вартість нуль
    if not lengths or len(lengths) == 1:
        return 0

    # будуємо мін купу з довжин
    heap = list(lengths)
    heapq.heapify(heap)

    total = 0
    # щоразу обʼєднуємо два найкоротші кабелі
    while len(heap) > 1:
        a = heapq.heappop(heap)
        b = heapq.heappop(heap)
        cost = a + b
        total += cost
        heapq.heappush(heap, cost)

    return total

# приклад використання
if __name__ == "__main__":
    cables = [4, 3, 2, 6]
    print(f"мінімальна загальна вартість {min_merge_cost(cables)}")
